<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="default">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <non-jta-data-source>java:comp/env/jdbc/librosDS</non-jta-data-source>

        <class>org.ConstelacionDeLibros.models.libros.Autor</class>
        <class>org.ConstelacionDeLibros.models.libros.Categoria</class>
        <class>org.ConstelacionDeLibros.models.libros.Editorial</class>
        <class>org.ConstelacionDeLibros.models.libros.Ejemplar</class>
        <class>org.ConstelacionDeLibros.models.libros.Libro</class>

        <class>org.ConstelacionDeLibros.models.ubicaciones.Estante</class>
        <class>org.ConstelacionDeLibros.models.ubicaciones.EstanteColumna</class>
        <class>org.ConstelacionDeLibros.models.ubicaciones.EstanteFila</class>
        <class>org.ConstelacionDeLibros.models.ubicaciones.Sala</class>
        <class>org.ConstelacionDeLibros.models.ubicaciones.UbicacionLibro</class>

        <class>org.ConstelacionDeLibros.models.usuarios.Cliente</class>

        <class>org.ConstelacionDeLibros.models.reservas.Reserva</class>

        <class>org.openxava.session.GalleryImage</class>
        <class>org.openxava.web.editors.DiscussionComment</class>
        <class>com.openxava.naviox.model.ConfigurationRecord</class>
        <class>com.openxava.naviox.model.Folder</class>
        <class>com.openxava.naviox.model.History</class>
        <class>com.openxava.naviox.model.Module</class>
        <class>com.openxava.naviox.model.ModuleRights</class>
        <class>com.openxava.naviox.model.Organization</class>
        <class>com.openxava.naviox.model.Role</class>
        <class>com.openxava.naviox.model.SessionRecord</class>
        <class>com.openxava.naviox.model.SSORecord</class>
        <class>com.openxava.naviox.model.User</class>
        <class>com.openxava.naviox.model.LDAPConfiguration</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
